<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_gradient_background"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/purple_500"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scroll_id"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/dataLogicLogo"
        android:layout_below="@+id/txt"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/subscribeToServiceEvents"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/square_button_shape"
                android:text="Subscribe To Service Events"
                android:textAllCaps="false"
                android:visibility="visible" />

            <Button
                android:id="@+id/connectToService"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/square_button_shape"
                android:text="Connect To Service"
                android:textAllCaps="false"
                android:visibility="visible" />


            <Button
                android:id="@+id/subscribeToScans"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/square_button_shape"
                android:text="Subscribe To Scans"
                android:textAllCaps="false"
                android:visibility="visible" />

            <Button
                android:id="@+id/isConnectedToScanner"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/square_button_shape"
                android:text="Is Connected To Scanner"
                android:textAllCaps="false"
                android:visibility="visible" />

            <Button
                android:id="@+id/isConnectedToService"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/square_button_shape"
                android:text="Is Connected To Service"
                android:textAllCaps="false"
                android:visibility="visible" />

            <Button
                android:id="@+id/get_latest_scan_value"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/square_button_shape"
                android:text="Get Latest Scan Value"
                android:textAllCaps="false"
                android:visibility="visible" />


            <Button
                android:id="@+id/unsubscribeFromScans"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/square_button_shape"
                android:text="Unsubscribe From Scans"
                android:textAllCaps="false"
                android:visibility="visible" />

            <Button
                android:id="@+id/unsubscribeFromServiceEvents"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/square_button_shape"
                android:text="Unsubscribe From Service Events"
                android:textAllCaps="false"
                android:visibility="visible" />

            <Button
                android:id="@+id/disconnectFromService"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/square_button_shape"
                android:text="Disconnect From Service"
                android:textAllCaps="false"
                android:visibility="visible" />

            <Button
                android:id="@+id/activity2"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/square_button_shape"
                android:text="Go to second activity"
                android:textAllCaps="false"
                android:visibility="gone" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

    <ImageView
        android:id="@+id/dataLogicLogo"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_datalogic_logo" />
</RelativeLayout>