<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/setting_fontsize"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_layout_shape"
    android:gravity="center_horizontal"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv_heading_intent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/barlow_semibold"
        android:gravity="center"
        android:text="Intent"
        android:textColor="@color/button_color"
        android:textSize="22dp" />

    <LinearLayout
        android:id="@+id/ll_input_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_heading_intent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/cardview_colored_border"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/intentActionEdtTxtLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.datalogic.aladdinsample.intentclient.CustomEditText
                android:id="@+id/et_intent_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/cardview_colored_border"
                android:drawableRight="@drawable/ic_cancel_text"
                android:focusable="true"
                android:maxLines="2"
                android:padding="10dp"
                android:text="@string/action_send_bar_code_data" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_input_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_input_text"
        android:layout_marginTop="15dp"
        android:background="@drawable/cardview_colored_border"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/intentExtraDataEdtTxtLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.datalogic.aladdinsample.intentclient.CustomEditText
                android:id="@+id/et_intent_extra_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/cardview_colored_border"
                android:drawableRight="@drawable/ic_cancel_text"
                android:focusable="true"
                android:maxLines="2"
                android:padding="10dp"
                android:text="@string/extra_barcode_data" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_input_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_input_text1"
        android:layout_marginTop="15dp"
        android:background="@drawable/cardview_colored_border"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/intentExtraTypeEdtTxtLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.datalogic.aladdinsample.intentclient.CustomEditText
                android:id="@+id/et_intent_extra_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/cardview_colored_border"
                android:drawableRight="@drawable/ic_cancel_text"
                android:focusable="true"
                android:maxLines="2"
                android:padding="10dp"
                android:text="@string/extra_barcode_code_type" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_input_text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_input_text2"
        android:layout_marginTop="15dp"
        android:background="@drawable/cardview_colored_border"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/intentExtraScantimeEdtTxtLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:endIconDrawable="@drawable/ic_cancel_text"
            app:endIconMode="custom">


            <com.datalogic.aladdinsample.intentclient.CustomEditText
                android:id="@+id/et_intent_extra_scantime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/cardview_colored_border"
                android:drawableRight="@drawable/ic_cancel_text"
                android:focusable="true"
                android:maxLines="2"
                android:padding="10dp"
                android:text="@string/extra_barcode_scan_time" />

        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/save"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_below="@+id/ll_input_text3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/square_button_shape"
        android:fontFamily="@font/barlow_semibold"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="15dp" />

</RelativeLayout>